<section class="products-show">
  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>
  <article class="product-detail">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

   <!--- Only viewable for logged-in users -->
    <% if current_user %>
    <form>
      <div class="row">
      <div class="col-md-6">
       <h3>Write Your Review</h3>
         <%= form_for ([@product, @review]) do |f| %>
           <%= f.text_area :description, class: "form-control" %>
           <%= f.select :rating, [['horrible', 1], ['poor', 2], ['mediocre', 3], ['good', 4], ['great', 5]]%>
           <%= f.submit "Create", class: 'btn-default pull-right btn-sm' %>
         <% end %>
         <% end %>
     </div>
     </div>
     <!--- Only viewable for logged-in users -->

     <div class="col-md-6">
     <div class="row">
       <h3>Past Reviews</h3>
          <%= render partial: 'review', collection: @product.reviews.sort_by(&:created_at).reverse, class: "form-control" %>
     </div>
     </div>
    </form>
  </article>
</section>
